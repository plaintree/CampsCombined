<% layout('layout/boilerplate') %>
<div class="row">
	<h2 class="text-center">Add a campground</h2>
	<section class="col-md-6 offset-md-3">
		<form
			action="/campgrounds"
			method="post"
			enctype="multipart/form-data"
			class="need-validation"
			novalidate
		>
			<div class="mb-3">
				<label for="title" class="form-label">Campground name</label>
				<input
					type="text"
					class="form-control"
					name="campground[title]"
					id="title"
					required
				/>
				<div class="invalid-feedback">Please enter a name.</div>
			</div>
			<div class="mb-3">
				<label for="loc" class="form-label">Campground location</label>
				<input
					type="text"
					class="form-control"
					name="campground[location]"
					id="loc"
					required
				/>
				<div class="invalid-feedback">Please choose a location.</div>
			</div>
			<div class="mb-3">
				<label for="img" class="form-label">Upload Images</label>

				<input
					type="file"
					class="form-control"
					name="image"
					id="img"
					multiple
				/>
			</div>
			<div class="mb-3">
				<label for="price" class="form-label">Price</label>
				<div class="input-group">
					<span class="input-group-text">GBP</span>
					<input
						type="number"
						class="form-control"
						name="campground[price]"
						id="price"
						required
					/>
					<div class="invalid-feedback">Please enter a price.</div>
				</div>
			</div>
			<div class="mb-3">
				<label for="des" class="form-label">Description</label>
				<textarea
					type="text"
					class="form-control"
					name="campground[description]"
					id="des"
					required
				></textarea>
			</div>
			<div class="mb-3">
				<button class="btn btn-primary">Add Campground</button>
				<a href="/campgrounds" class="btn btn-secondary">Back</a>
			</div>
		</form>
	</section>
</div>
