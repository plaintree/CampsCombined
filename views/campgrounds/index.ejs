<% layout('layout/boilerplate') %>
<div class="mb-3">
	<div id="clusterMap"></div>
</div>
<h2>All Campgrounds</h2>
<div>
	<a href="/campgrounds/add" class="btn btn-primary mb-3">Add a campground</a>
</div>

<% campground.forEach(c => { %>
<div class="card mb-3">
	<div class="row">
		<div class="col-md-4">
			<% if(c.images.length){ %>
			<img
				src="<%= c.images[0].url %>"
				class="card-img-top img-thumbnail"
				alt=""
			/>
			<% } else { %>
			<img
				src="https://res.cloudinary.com/plaintree/image/upload/v1648818421/Yelp-Camp/ipyuwvfhe3fqge6y1zxx.jpg"
				class="card-img-top"
				alt=""
			/>
			<% } %>
		</div>
		<div class="col-md-8">
			<div class="card-body">
				<h5 class="card-title"><%= c.title %></h5>
				<h6 class="card-subtitle mb-2 text-muted"><%= c.location%></h6>
				<p class="card-text"><%=c.description%></p>
				<a href="/campgrounds/<%= c.id %>" class="btn btn-outline-dark btn-sm"
					>Detail</a
				>
			</div>
		</div>
	</div>
</div>

<% }) %>
<script>
	const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
	const campgrounds = {features: <%-JSON.stringify(campground)%>}
</script>
<script src="/js/clusterMap.js"></script>
